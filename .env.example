# DevFlow-AI Environment Variables

# Server Configuration
PORT=5000
NODE_ENV=development
CLIENT_URL=http://localhost:3000
SERVER_URL=http://localhost:5000

# Anthropic Claude AI
ANTHROPIC_API_KEY=your_anthropic_api_key_here
CLAUDE_MODEL=claude-3-sonnet-20241022

# GitHub Integration
GITHUB_TOKEN=your_github_personal_access_token
GITHUB_WEBHOOK_SECRET=your_webhook_secret_key

# Database (SQLite for development, PostgreSQL for production)
DATABASE_URL=sqlite:./dev.db
# DATABASE_URL=postgresql://username:password@localhost:5432/devflow_ai

# JWT Secret
JWT_SECRET=your_super_secret_jwt_key_here_make_it_long_and_secure

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=.js,.jsx,.ts,.tsx,.py,.java,.cpp,.c,.go,.rs,.php,.rb,.swift

# Logging
LOG_LEVEL=info
LOG_FILE=logs/devflow-ai.log

# External APIs
GITHUB_API_URL=https://api.github.com
ANTHROPIC_API_URL=https://api.anthropic.com

# Security
BCRYPT_ROUNDS=12
SESSION_TIMEOUT=86400000

# Development Tools
DEV_MODE=true
DEBUG=devflow:*

# Production Settings (uncomment for production)
# NODE_ENV=production
# CLIENT_URL=https://your-frontend-domain.com
# SERVER_URL=https://your-api-domain.com
# DATABASE_URL=postgresql://username:password@your-db-host:5432/devflow_ai
# LOG_LEVEL=error
# DEV_MODE=false

# Optional: Sentry for error tracking
# SENTRY_DSN=your_sentry_dsn_here

# Optional: Redis for caching
# REDIS_URL=redis://localhost:6379
# REDIS_PASSWORD=your_redis_password

# Optional: Email service (for notifications)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASS=your_app_password

# Optional: Webhook URLs for integrations
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/slack/webhook
# DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your/discord/webhook